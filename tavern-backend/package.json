    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.4",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "ioredis": "^5.9.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.19.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "redis": "^5.10.0",
    "zod": "^3.23.8"
