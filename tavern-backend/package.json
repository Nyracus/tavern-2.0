    "@types/jest": "^29.5.14",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.19.3",
    "@types/supertest": "^6.0.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
